<Page x:Class="WpfApp.Pages.Admin.UsersControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersControl">
    <Page.Resources>
        <ResourceDictionary Source="../../Style/Style.xaml"/>
    </Page.Resources>
    <Grid >
        <!--Таблица-->
        <StackPanel x:Name="mainPanel"
            Orientation="Vertical">
            <!--Титульник таблицы-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Style="{StaticResource TitlTable}" Content="Имя" FontSize="20"/>
                <Label Grid.Column="1" Style="{StaticResource TitlTable}" Content="Фамилия" FontSize="20"/>
                <Label Grid.Column="2" Style="{StaticResource TitlTable}" Content="Вальюта" FontSize="20"/>
                <Label Grid.Column="3" Style="{StaticResource TitlTable}" Content="Логин" FontSize="20"/>
                <Label Grid.Column="4" Style="{StaticResource TitlTable}" Content="Пароль" FontSize="20"/>
            </Grid>
            <!--Тестовая строка-->
            
        </StackPanel>
    </Grid>
</Page>
