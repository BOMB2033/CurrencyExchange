<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" 
        
        MinHeight="450" 
        MinWidth="800" 
        MaxHeight="600"
        MaxWidth="950"
        
        Height="450" 
        Width="800" 
        WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary Source="../Style/StyleColors.xaml"/>
    </Window.Resources>


    <Grid x:Name="MainGrid" MouseDown="MainGrid_MouseDown" Background="{StaticResource Gray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button 
                x:Name="ButtonClose" Click="ButtonExit_Click" Height="25" Width="25" 
                Content="X" FontSize="20" Background="Transparent" Foreground="{StaticResource White}"/>
        </StackPanel>
        <Frame NavigationUIVisibility="Hidden" x:Name="MainFrame" Grid.Row="1"/>
    </Grid>
</Window>
